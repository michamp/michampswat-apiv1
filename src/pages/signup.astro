---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';

---

<Layout title="Sign-up">
		<main>
	
			<div>
			  
				<div class="w-full px-4 md:px-0 md:mt-8 mb-16 text-gray-800 leading-normal ">
					   
					
			    	<div class="flex flex-col items-center justify-center mt-10">
						<h1 class="font-bold uppercase text-2xl text-white mb-5">Sign-up</h1>
				    	<h3 class="text-xl text-white mb-5">Please enter login and other information below to sign-up:</h3>
					</div>
			    	<div class="grid grid-cols-1 gap-2  ml-10">
				    	<div class="flex flex-col items-center justify-center">
							<label class="input text-white input-bordered flex items-center gap-2 w-1/4">
							  <svg
							    xmlns="http://www.w3.org/2000/svg"
							    viewBox="0 0 16 16"
							    fill="currentColor"
							    class="h-4 w-4 opacity-70">
							    <path
							      d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6ZM12.735 14c.618 0 1.093-.561.872-1.139a6.002 6.002 0 0 0-11.215 0c-.22.578.254 1.139.872 1.139h9.47Z" />
							  </svg>
							  <input type="text" class="text-white " placeholder="First Name" />
							</label>
						</div>
				    	<div class="flex flex-cols items-center justify-center">
							<label class="input text-white input-bordered flex items-center gap-2 w-1/4">
							  <svg
							    xmlns="http://www.w3.org/2000/svg"
							    viewBox="0 0 16 16"
							    fill="currentColor"
							    class="h-4 w-4 opacity-70">
							    <path
							      d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6ZM12.735 14c.618 0 1.093-.561.872-1.139a6.002 6.002 0 0 0-11.215 0c-.22.578.254 1.139.872 1.139h9.47Z" />
							  </svg>
							  <input type="text" class="text-white " placeholder="Last Name" />
							</label>
						</div>
						<div class="flex flex-cols items-center justify-center">
							<label class="input text-white input-bordered flex items-center gap-2 w-1/4">
							  <svg
							    xmlns="http://www.w3.org/2000/svg"
							    viewBox="0 0 16 16"
							    fill="currentColor"
							    class="h-4 w-4 opacity-70">
							    <path
							      d="M2.5 3A1.5 1.5 0 0 0 1 4.5v.793c.026.009.051.02.076.032L7.674 8.51c.206.1.446.1.652 0l6.598-3.185A.755.755 0 0 1 15 5.293V4.5A1.5 1.5 0 0 0 13.5 3h-11Z" />
							    <path
							      d="M15 6.954 8.978 9.86a2.25 2.25 0 0 1-1.956 0L1 6.954V11.5A1.5 1.5 0 0 0 2.5 13h11a1.5 1.5 0 0 0 1.5-1.5V6.954Z" />
							  </svg>
							  <input type="text" class="text-white " placeholder="Email" />
							</label>
						</div>
						<div class="flex flex-cols items-center justify-center">
							<label class="input text-white input-bordered flex items-center gap-2 w-1/4">
							  <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 32 32"><path fill="currentColor" d="M26 29h-.17C6.18 27.87 3.39 11.29 3 6.23A3 3 0 0 1 5.76 3h5.51a2 2 0 0 1 1.86 1.26L14.65 8a2 2 0 0 1-.44 2.16l-2.13 2.15a9.37 9.37 0 0 0 7.58 7.6l2.17-2.15a2 2 0 0 1 2.17-.41l3.77 1.51A2 2 0 0 1 29 20.72V26a3 3 0 0 1-3 3M6 5a1 1 0 0 0-1 1v.08C5.46 12 8.41 26 25.94 27a1 1 0 0 0 1.06-.94v-5.34l-3.77-1.51l-2.87 2.85l-.48-.06c-8.7-1.09-9.88-9.79-9.88-9.88l-.06-.48l2.84-2.87L11.28 5Z"/></svg>
							  <input type="text" class="text-white " placeholder="Office Phone" />
							</label>
						</div>
						<div class="flex flex-cols items-center justify-center">
							<label class="input text-white input-bordered flex items-center gap-2 w-1/4">
							  <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 32 32"><path fill="currentColor" d="M26 29h-.17C6.18 27.87 3.39 11.29 3 6.23A3 3 0 0 1 5.76 3h5.51a2 2 0 0 1 1.86 1.26L14.65 8a2 2 0 0 1-.44 2.16l-2.13 2.15a9.37 9.37 0 0 0 7.58 7.6l2.17-2.15a2 2 0 0 1 2.17-.41l3.77 1.51A2 2 0 0 1 29 20.72V26a3 3 0 0 1-3 3M6 5a1 1 0 0 0-1 1v.08C5.46 12 8.41 26 25.94 27a1 1 0 0 0 1.06-.94v-5.34l-3.77-1.51l-2.87 2.85l-.48-.06c-8.7-1.09-9.88-9.79-9.88-9.88l-.06-.48l2.84-2.87L11.28 5Z"/></svg>
							  <input type="text" class="text-white " placeholder="Mobile Phone" />
							</label>
						</div>
				    	<div class="flex flex-col items-center justify-center">
							<label class="input text-white input-bordered flex items-center gap-2 w-1/4">
							  <svg
							    xmlns="http://www.w3.org/2000/svg"
							    viewBox="0 0 16 16"
							    fill="currentColor"
							    class="h-4 w-4 opacity-70">
							    <path
							      d="M2.5 3A1.5 1.5 0 0 0 1 4.5v.793c.026.009.051.02.076.032L7.674 8.51c.206.1.446.1.652 0l6.598-3.185A.755.755 0 0 1 15 5.293V4.5A1.5 1.5 0 0 0 13.5 3h-11Z" />
							    <path
							      d="M15 6.954 8.978 9.86a2.25 2.25 0 0 1-1.956 0L1 6.954V11.5A1.5 1.5 0 0 0 2.5 13h11a1.5 1.5 0 0 0 1.5-1.5V6.954Z" />
							  </svg>
							  <input type="text" class="text-white " placeholder="Username" />
							</label>
						</div>
				    	<div class="flex flex-cols items-center justify-center">
							<label class="input text-white input-bordered flex items-center gap-2 w-1/4">
							  <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24"><path fill="currentColor" d="M12.917 13A6.002 6.002 0 0 1 1 12a6 6 0 0 1 11.917-1H23v2h-2v4h-2v-4h-2v4h-2v-4zM7 16a4 4 0 1 0 0-8a4 4 0 0 0 0 8"/></svg>
							  <input type="password" class="text-white" placeholder="Password" />
							</label>
						</div>
						<div class="flex flex-cols items-center justify-center">
							<button class="btn hover:bg-primary"><Icon name="ri:close-circle-line" class="text-white text-3xl" />Cancel</button>
							<button class="btn hover:bg-primary"><Icon name="carbon:login" class="text-white text-3xl" />Signup</button>
						</div>
						
			    	</div>
			    
			   
			    
			  </div>
			  </div>
			  
			  
			</div>

	</main>
	<script>
			
		   import "../scripts/scripts.js";
	
	</script>
	</Layout>